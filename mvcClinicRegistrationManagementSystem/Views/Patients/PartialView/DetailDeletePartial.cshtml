<div>
    <dl class="row">
        <dt class="col-sm-2">Patient ID:</dt>
        <dd class="col-sm-10">@Model.PatientsID</dd>

        <dt class="col-sm-2">Name:</dt>
        <dd class="col-sm-10">@Model.PatientsName</dd>

        <dt class="col-sm-2">Contact Details:</dt>
        <dd class="col-sm-10">@Model.ContactDetails</dd>

     

        <dt class="col-sm-3">Appointment Information:</dt>
        <dd class="col-sm-10">
            @foreach (var appointment in Model.Appointment)
            {
                <p>
                    <strong>Doctor:</strong> @appointment.Doctor.DoctorName<br />
                    <strong>Specialization:</strong> @appointment.Specialization.SpecializationName<br />
                    <strong>Date:</strong> @appointment.Date.ToString("yyyy-MM-dd")<br />
                    <strong>Time:</strong> @appointment.Time<br />
                </p>
            }
        </dd>
    </dl>
</div>